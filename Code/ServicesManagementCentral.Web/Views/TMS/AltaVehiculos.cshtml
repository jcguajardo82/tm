                                                <td>
                                                    @r["Estatus"]
                                                </td>
                                                <td>
                                                    <button type="button" onclick="SelectOrder(@r["Id_TipoVehiculo"])" class="btn btn-warning btn-circle"> <i class="fa fa-minus"></i></button>
