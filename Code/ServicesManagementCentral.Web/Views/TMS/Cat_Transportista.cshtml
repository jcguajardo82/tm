        function AddSurtidores() {
            //var _Id_Num_UN = $("#hddTda").val();
            //debugger;
            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("InsOperador", "TMS")',
                data: {
                    nombre: document.getElementById("in_nombre").value,
                    user: document.getElementById("in_usuario").value,
                    pass: document.getElementById("in_pass").value,
                    matricula: document.getElementById("in_matricula").value,

                },
                datatype: "html",
                success: function (json) {
                    console.log(json);

                    debugger;
                    if (json.Success) {

                        var table = $('#example').DataTable();

                        table.clear().draw();
                        table.destroy();

                        $("#modal-form").modal('hide');

                        var myTable = $('#example').DataTable();

                        for (var i = 0; i < json.json.length; i++) {

                            myTable.row.add([
                                json.json[i].Id_Transportista,
                                json.json[i].Matricula,
                                json.json[i].Nombre,
                                json.json[i].Usuario,
                                json.json[i].Pass,
                                json.json[i].Estatus,
                                "<button onclick=\"getOperador(" + json.json[i].Id_Transportista + ")\" type=\"button\" class=\"btn btn-white btn-circle\"> <i class=\"fa fa-edit\"></i></button><button type=\"button\" onclick=\"DeleteSurtidores(" + json.json[i].Id_Transportista + ")\" class=\"btn btn-warning btn-circle\"> <i class=\"fa fa-minus\"></i></button>"
                            ]).draw();

                        }
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function EditSurtidores() {

            var e = document.getElementById("id_estatus");
            var strUser = e.value;

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("EditOperador", "TMS")',
                data: {
                    Id: document.getElementById("Id_Vehiculo").value,
                    nombre: document.getElementById("in_nombre").value,
                    user: document.getElementById("in_usuario").value,
                    pass: document.getElementById("in_pass").value,
                    matricula: document.getElementById("in_matricula").value,
                    estatus: strUser


                },
                datatype: "html",
                success: function (json) {
                    console.log(json);

                    debugger;
                    if (json.Success) {

                        var table = $('#example').DataTable();

                        table.clear().draw();
                        table.destroy();

                        $("#modal-form").modal('hide');

                        var myTable = $('#example').DataTable();

                        for (var i = 0; i < json.json.length; i++) {

                            myTable.row.add([

