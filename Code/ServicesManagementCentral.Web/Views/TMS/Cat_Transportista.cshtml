                        }

                        document.getElementById("flag_edit").value = 0;

                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function DeleteSurtidores(id) {
            if (confirm('Esta seguro que desea eliminar el Operador : ' + id))
            {
                $.ajax({
                    async: false,
                    type: "GET",
                    url: '@Url.Action("DeleteOperador", "TMS")',
                    data: {
                        Id: id
                    },
                    datatype: "html",
                    success: function (json) {
                        if (json.Success) {
                            var table = $('#example').DataTable();

                            table.clear().draw();
                            table.destroy();

                            $("#modal-form").modal('hide');

                            var myTable = $('#example').DataTable();

                            for (var i = 0; i < json.json.length; i++) {

                                myTable.row.add([

                                    json.json[i].Id_Transportista,
                                    json.json[i].Matricula,
                                    json.json[i].Nombre,
                                    json.json[i].Usuario,
                                    json.json[i].Pass,
                                    json.json[i].Estatus,
                                    "<button onclick=\"getOperador(" + json.json[i].Id_Transportista + ")\" type=\"button\" class=\"btn btn-white btn-circle\"> <i class=\"fa fa-edit\"></i></button><button type=\"button\" onclick=\"DeleteSurtidores(" + json.json[i].Id_Transportista + ")\" class=\"btn btn-warning btn-circle\"> <i class=\"fa fa-minus\"></i></button>"
                                ]).draw();

                            }
                        }
                    }
                    , error: function (jqXHR, textStatus, errorThrown) {
                        bootbox.alert(errorThrown);
                    }
                });
            }
        }

        function getOperador(id) {

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetOperadorById", "TMS")',
                data: {
                    Id : id
                },

                datatype: "html",
                success: function (json) {
                    if (json.Success) {

                        document.getElementById("Id_Vehiculo").value = json.json.Id_Transportista;
                        document.getElementById("in_matricula").value = json.json.Matricula;
                        document.getElementById("in_nombre").value = json.json.Nombre;
                        document.getElementById("in_pass").value = json.json.Pass;

                        document.getElementById("id_estatus").value = 1;
                        document.getElementById("flag_edit").value = 1;


                        $("#modal-form").modal('show');


                    }
                    else { alert(json.Message) }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });

        }

