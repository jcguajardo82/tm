                datatype: "html",
                success: function (json) {
                    if (json.Success)
                    {
                        console.log(json);
                        var dynamicSelect = document.getElementById("ddlTipoServicio");
                        dynamicSelect.innerText = null;
                        console.log(dynamicSelect);
                        for (var i = 0; i < json.servicio.length; i++) {
                            var newOption = document.createElement("option");
                            newOption.value = json.servicio[i].IdTipoServicio;
                            newOption.textContent = json.servicio[i].Desc_TipoServicio;//item.whateverProperty

                            dynamicSelect.appendChild(newOption);
                        }

                        dynamicSelect = document.getElementById("ddlTipoEnvio");
                        dynamicSelect.innerText = null;
                        console.log(dynamicSelect);
                        for (var i = 0; i < json.servicio.length; i++) {
                            var newOption = document.createElement("option");
                            newOption.value = json.envio[i].IdTipoEnvio;
                            newOption.textContent = json.envio[i].Desc_TipoEnvio;//item.whateverProperty

                            dynamicSelect.appendChild(newOption);
                        }
                        console.log(dynamicSelect);
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function EditSurtidores(Id_paqueteria) {
            $("#hddId_paqueteria").val(Id_paqueteria);
            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetPaqueteriasId", "Catalogo")',
                data: {
                    Id_paqueteria: Id_paqueteria
                },
                datatype: "html",
                success: function (json) {
                    //debugger;
                    if (json.Success)
                    {
                        console.log(json);
                        for (var i = 0; i < json.resp.length; i++) {


                            debugger;
                            $("#txtPeso").val(json.resp[i].Peso);
                            $("#ProveedorLista").val(json.resp[i].Id_Proveedor);

                        }


                        $("#frmAltaTrans").modal('show');
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function DeleteSurtidores(Id_paqueteria) {

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("DelPaqueteria", "Catalogo")',
                data: {
                    Id_paqueteria: Id_paqueteria
                },
                datatype: "html",
                success: function (json) {
                    //debugger;
                    if (json.Success)
                    {
                        location.reload();
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function AddSurtidores() {

            var _peso = $("#txtPeso").val();
            var _Id_Proveedor = $("#ProveedorLista").val();
            var _Id_paqueteria = $("#hddId_paqueteria").val();
            //if (!isNaN(_peso)) {
