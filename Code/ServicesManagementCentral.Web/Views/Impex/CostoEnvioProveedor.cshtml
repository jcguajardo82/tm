                    Id_Proveedor: _Id_Proveedor,
                    peso: _peso,
                    Id_paqueteria: _Id_paqueteria
                },
                datatype: "html",
                success: function (json) {
                    if (json.Success)
                    {
                        location.reload();
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
