    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4"><h2>Definicion de tiempos extraordinarios</h2></div>
    <div class="col-4"></div>
</div>
<div class="ibox-content p-xl" style="padding-top: 0px;padding-bottom: 0px;">
    <br />
    <div class="row">
        <div class="col-12">
            <table id="tblConsulta" class="table table-striped table-bordered table-hover">
