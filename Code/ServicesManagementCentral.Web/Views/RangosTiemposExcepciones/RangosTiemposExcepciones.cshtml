        function GetConsulta() {
            //var _Id_Num_UN = $("#hddId").val();
            //debugger;
            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetRangosTiemposExcepciones", "RangosTiemposExcepciones")',
                data: {
                    //  Id_Num_UN: _Id_Num_UN
                },
                datatype: "html",
                success: function (json) {
                    console.log(json);

                    debugger;
                    if (json.Success) {


                        var myTable = $('#tblConsulta').DataTable();
                        myTable
                            .clear()
                            .draw();
                        for (var i = 0; i < json.resp.length; i++) {

                            if (json.resp[i].BitActivo == "True") {
                                var estado = "Activo";
                            }
                            else {
                                var estado = "Inactivo";
                            }

                            myTable.row.add([
   
                                json.resp[i].SupplierName,
                                json.resp[i].NombreTransportista,
                                json.resp[i].DiasExtra ,
                                json.resp[i].Prioridad,
                                                          
                                json.resp[i].FechaInicioPromo,
                                json.resp[i].HoraInicioPromo,
                                json.resp[i].FechaFinPromo,
                                json.resp[i].HoraFinPromo,
                               
                                json.resp[i].UsuarioCreacion,
                                json.resp[i].FechaUltModif,
                                json.resp[i].HoraUltModif,
                                estado,
                                //json.resp[i].BitActivo,
                                "<button title='Editar' onclick=\"GetById(" + json.resp[i].cnscDef + ")\" type=\"button\" class=\"btn btn-white btn-circle\"> <i class=\"fa fa-edit\"></i></button><button title='Eliminar' type=\"button\" onclick=\"Delete(" + json.resp[i].cnscDef + ")\" class=\"btn btn-warning btn-circle\"> <i class=\"fa fa-minus\"></i></button>"
                            ]).draw();
                        }
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function Add() {
        /*   var _IdTipoCatalogo = $("#ddlTipoCatalogo").val();*/
            var _cnscDef = $("#hddId").val();
            var _IdOwner = $("#ddlAlmacen").val();
            var _IdTipoCatalogo = $("#ddlCatalogo").val();
            var _IdSupplierWH = $("#ddlProveedor").val();
            var _SupplierName= $("#ddlProveedor :selected").text();
            var _IdTransportista = $("#ddlTransportista").val();
            var _NombreTransportista = $("#ddlTransportista :selected").text();          
            var _IdTipoLogistica = $("#ddlTipoLogistica").val();

            debugger;


            _FechaInicioPromo = $("#txtFecIniTarifa").val();
            _HoraInicioPromo = $("#txtHoraIniTarifa").val();
            _FechaFinPromo = $("#txtFecFinTarifa").val();
            _HoraFinPromo = $("#txtHoraFinTarifa").val();
            _CostoEspecial = $("#txtCostoEsp").val();
            _DiasExtra = $("#txtDiasExtra").val();
            _Prioridad = $("#txtPrioridad").val();
            _BitActivo = $("#id_estatus").val();



            if (_IdOwner == "0") {
                $("#ddlAlmacen").focus();
                return;
            }
          
           
            if (_IdSupplierWH == "0") {
                $("#ddlProveedor").focus();
                return;
            }
            if (_IdTransportista == "0") {
                $("#ddlTransportista").focus();
                return;
            }    
            //if (_IdTipoCatalogo == "0") {
            //    $("#ddlCatalogo").focus();
            //    return;
            //}
            //if (_IdTipoLogistica == "0") {
            //    $("#ddlTipoLogistica").focus();
            //    return;
            //}

            if (_Prioridad.length == 0) {
                $("#txtPrioridad").focus();
                return;
            }
            if (_DiasExtra.length == 0) {
                $("#txtDiasExtra").focus();
                return;
            }
           




            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("AddRangosTiemposExcepciones", "RangosTiemposExcepciones")',
                data: {
                    cnscDef: _cnscDef
                    ,IdTipoCatalogo: _IdTipoCatalogo
                    , IdOwner: _IdOwner                                    
                    , IdSupplierWH: _IdSupplierWH
                    , SupplierName: _SupplierName
                    , IdTransportista: _IdTransportista
                    , NombreTransportista: _NombreTransportista
                    , IdTipoLogistica: _IdTipoLogistica
                    , FechaInicioPromo: _FechaInicioPromo
                    , HoraInicioPromo: _HoraInicioPromo
                    , FechaFinPromo: _FechaFinPromo
                    , HoraFinPromo: _HoraFinPromo
                    , DiasExtra: _DiasExtra
                    , Prioridad: _Prioridad
                    ,BitActivo: (_BitActivo == "1") ? true : false

                },
                datatype: "html",
                success: function (json) {
                    console.log(json);

                    debugger;
                    if (json.Success) {

                        //GetConsulta();
                        location.reload();
                    }
                    else {
                        alert(json.Message);
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }


        function Delete(id) {
            if (confirm('Esta seguro que desea eliminar el registro : ' + id))
            {
                $.ajax({
                    async: false,
                    type: "GET",
                    url: '@Url.Action("DelRangosTiemposExcepciones", "RangosTiemposExcepciones")',
                    data: {
                        cnscDef: id
                    },
                    datatype: "html",
                    success: function (json) {
                        if (json.Success) {
                            GetConsulta();
                        }
                    }
                    , error: function (jqXHR, textStatus, errorThrown) {
                        bootbox.alert(errorThrown);
                    }
                });
            }
        }

        function GetById(id) {
            $("#hddId").val(id);
            IniciarControles(2);
            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetRangosTiemposExcepcionesId", "RangosTiemposExcepciones")',
                data: {
                    Id: id
                },

                datatype: "html",
                success: function (json) {
                    if (json.Success) {

                        


                        $("#ddlCatalogo").val(json.resp.IdTipoCatalogo);

                        $("#txtDiasExtra").val(json.resp.DiasExtra);
                        $("#txtPrioridad").val(json.resp.Prioridad);

                        $("#ddlAlmacen").val(json.resp.IdOwner);
                        CmboProveedores(json.resp.IdOwner);
                        $("#ddlProveedor").val(json.resp.IdSupplierWH);
                        $("#ddlTransportista").val(json.resp.IdTransportista);
                        $("#ddlTipoLogistica").val(json.resp.IdTipoLogistica);
                        $("#ddlTipoLogistica").val(json.resp.IdTipoLogistica);
                        $("#ddlTipoLogistica").val(json.resp.IdTipoLogistica);
                        $("#txtFecIniTarifa").val(json.resp.FechaInicioPromo);
                        $("#txtHoraIniTarifa").val(json.resp.HoraInicioPromo);
                        $("#txtFecFinTarifa").val(json.resp.FechaFinPromo);
                        $("#txtHoraFinTarifa").val(json.resp.HoraFinPromo);
   




                        if (json.resp.BitActivo) {
                            document.getElementById("id_estatus").value = 1;
                        } else { document.getElementById("id_estatus").value = 0}



                        $("#modal-form").modal('show');


                    }
                    else { alert(json.Message) }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                   alert(errorThrown);
                }
            });

        }

        function IniciarControles(op) {
            $("#ddlAlmacen").val('0');   
            $("#ddlProveedor").val('0');         
            $("#ddlTransportista").val('0');     
            $("#ddlTipoLogistica").val('0');

            $("#txtFecIniTarifa").val('');
            $("#txtHoraIniTarifa").val('');
            $("#txtFecFinTarifa").val('');
            $("#txtHoraFinTarifa").val('');
            $("#txtCostoEsp").val('');
            $("#txtDiasExtra").val('');
            $("#txtPrioridad").val('');

            if (op == 1) {
                $("#ddlAlmacen").prop("disabled", false);
                $("#ddlProveedor").prop("disabled", false);
                $("#ddlTransportista").prop("disabled", false);
                $("#ddlTipoLogistica").prop("disabled", false);

                $("#txtFecIniTarifa").prop("readonly", false);
                $("#txtHoraIniTarifa").prop("readonly", false);
                $("#txtCostoEsp").prop("readonly", false);
                $("#txtDiasExtra").prop("readonly", false);
                $("#txtPrioridad").prop("readonly", false);
            } else {
                $("#ddlAlmacen").prop("disabled", true);
                $("#ddlProveedor").prop("disabled", true);
                $("#ddlTransportista").prop("disabled", true);
                $("#ddlTipoLogistica").prop("disabled", true);

                $("#txtFecIniTarifa").prop("readonly", true);
                $("#txtHoraIniTarifa").prop("readonly", true);
                $("#txtCostoEsp").prop("readonly", true);
                $("#txtDiasExtra").prop("readonly", true);
                $("#txtPrioridad").prop("readonly", true);
            }
        }

    </script>
