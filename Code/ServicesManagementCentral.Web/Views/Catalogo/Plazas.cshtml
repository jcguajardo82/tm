                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function DeleteSurtidores(id) {
            if (confirm('Esta seguro que desea eliminar el vehiculo : ' + id))
            {
                $.ajax({
                    async: false,
                    type: "GET",
                    url: '@Url.Action("DeleteVehiculo", "TMS")',
                    data: {
                        Id: id
                    },
                    datatype: "html",
                    success: function (json) {
                        if (json.Success) {
                            var table = $('#example').DataTable();

                            table.clear().draw();
                            table.destroy();

                            $("#modal-form").modal('hide');

                            var myTable = $('#example').DataTable();

                            for (var i = 0; i < json.json.length; i++) {

                                myTable.row.add([

                                    json.json[i].Id_Vehiculo,
                                    "Camioneta",
                                    json.json[i].Descripcion,
                                    json.json[i].Placas,
                                    json.json[i].Motor,
                                    json.json[i].Estatus,
                                    "<button onclick=\"getVehiculo(" + json.json[i].Id_Vehiculo + ")\" type=\"button\" class=\"btn btn-white btn-circle\"> <i class=\"fa fa-edit\"></i></button><button type=\"button\" onclick=\"DeleteSurtidores(" + json.json[i].Id_Vehiculo + ")\" class=\"btn btn-warning btn-circle\"> <i class=\"fa fa-minus\"></i></button>"
                                ]).draw();

                            }
                        }
                    }
                    , error: function (jqXHR, textStatus, errorThrown) {
                        bootbox.alert(errorThrown);
                    }
                });
            }
        }

        function getplaza(id) {

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("ListPlazasbyID", "Catalogo")',
                data: {
                    Id : id
                },

                datatype: "html",
                success: function (json) {
                    if (json.Success) {
                        debugger
                        document.getElementById("in_idPlaza2").value = json.resp[0].IdPlaza;
                        document.getElementById("in_Plaza2").value = json.resp[0].Desc_Plaza;
                        document.getElementById("in_claveplaza2").value = json.resp[0].cve_Plaza;
                        document.getElementById("id_estatus2").value = json.resp[0].BitActivo =="0" ? 0 : 1;
                        //document.getElementById("in_placas").value = json.resp.CreateDate;
                        //document.getElementById("in_desc").value = json.resp.Created_User;
                        //document.getElementById("in_motor").value = json.resp.FecMovto;
                        //document.getElementById("in_placas").value = json.resp.Modified_User;
                        //document.getElementById("in_placas").value = json.resp.cve_Plaza;

                        if (json.resp.BitActivo == "1") {
                            document.getElementById("id_estatus").value = 1;
                        } else { document.getElementById("id_estatus").value = 0 }
                        // document.getElementById("id_estatus").value = 1;
                        document.getElementById("flag_edit").value = 1;


                        $("#modal-formEdit").modal('show');


                    }
                    else { alert(json.Message) }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });

        }



