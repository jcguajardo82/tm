        function GetTmsUNs() {

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("ListPlazas", "Catalogo")',
                data: {
                    //  Id_Num_UN: _Id_Num_UN
                },
                datatype: "html",
                success: function (json) {
                    //console.log(json);

                    debugger;
                    if (json.Success) {

                        var myTable = $('#example').DataTable();
                        myTable.clear().draw();
                        for (var i = 0; i < json.resp.length; i++) {


                            myTable.row.add([

                                json.resp[i].IdPlaza,
                                json.resp[i].cve_Plaza,
                                json.resp[i].Desc_Plaza,
                                //json.resp[i].CreateDate,
                                //json.resp[i].CreateTime,
                                json.resp[i].Created_User,
                                json.resp[i].FecMovto,
                                json.resp[i].TimeMovto,
                                json.resp[i].Modified_User,
                                json.resp[i].BitActivo == '1' ? 'Activo' : 'Inactivo',
                                "<button title='Editar' onclick=\"getplaza(" + json.resp[i].IdPlaza + ")\" type=\"button\" class=\"btn btn-white btn-circle\"><i class=\"fa fa-edit\"> "
                            ]).draw();
                        }
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

