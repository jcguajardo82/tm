@section scripts {


    <link href="~/Content/plugins/datatables/datatables.css" rel="stylesheet" />
    <script src="~/Content/plugins/datatables/datatables.min.js"></script>
    <script src="~/Content/plugins/datatables/datatables.js"></script>

    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>


    <script>

        function AgregaCps() {

            var array = [];


            $("#CPLista option").each(function () {
                var thisOptionValue = $(this).val();

                array.push(thisOptionValue);
            });


            $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetCPS", "Catalogo")',
                    data: {
                        in_data: array
                    },
                    datatype: "html",
                    async: false,
                    beforeSend: function () {
                        //$(".modal").show();
                        //document.getElementById("postalcode").value = "";
                    },
                    success: function (data) {
                        if (data.Success) {
                            console.log(data);
                            var dynamicSelect = document.getElementById("CPLista");
                            console.log(dynamicSelect);
                            for (var i = 0; i < data.json.length; i++) {
                                var newOption = document.createElement("option");
                                newOption.value = data.json[i];
                                newOption.textContent = data.json[i];//item.whateverProperty

                                dynamicSelect.appendChild(newOption);
                            }
                            console.log(dynamicSelect);
                        }
                    }
                });
        }




        $('#radioBtn a').on('click', function () {
            var sel = $(this).data('title');
            var tog = $(this).data('toggle');
            $('#' + tog).prop('value', sel);

            $('a[data-toggle="' + tog + '"]').not('[data-title="' + sel + '"]').removeClass('active').addClass('notActive');
            $('a[data-toggle="' + tog + '"][data-title="' + sel + '"]').removeClass('notActive').addClass('active');
        })


        $(document).ready(function () {

            //GetTmsUNs();
            GetAlmacen();

            $('#tbAlmacen thead tr').clone(true).appendTo('#tbAlmacen thead');
            $('#tbAlmacen thead tr:eq(0) th').each(function (i) {
                if ($(this).attr('name') != "accion") {
                    var title = $(this).text();
                    $(this).html('<input type="text" class="form form-control input-sm" placeholder="' + title + '" />');

                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                } else {
                    $(this).empty();
                }
            });

            table =$('#tbAlmacen').DataTable(
                {

                    language:
                    {
                        "sProcessing": "Procesando...",
                        "sLengthMenu": "Mostrar _MENU_ registros",
                        "sZeroRecords": "No se encontraron resultados",
                        "sEmptyTable": "Ningún dato disponible en esta tabla",
                        "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                        "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                        "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                        "sInfoPostFix": "",
                        "sSearch": "Buscar:",
                        "sUrl": "",
                        "sInfoThousands": ",",
                        "sLoadingRecords": "Cargando...",
                        "oPaginate": {
                            "sFirst": "Primero",
                            "sLast": "Último",
                            "sNext": "Siguiente",
                            "sPrevious": "Anterior"

                        },
                        "oAria": {
                            "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                            "sSortDescending": ": Activar para ordenar la columna de manera descendente"

                        },
                        "buttons": {
                            "print": "Imprimir",
                            "pageLength": 'Mostrar %d Registros'

                        }
                    },
                    dom: 'Bfrtip',
                    lengthMenu: [
                        [10, 25, 50, -1],
                        ['10 Registros', '25 Registros', '50 Registros', 'Mostrar Todos']
                    ],
                    buttons: [
                        { extend: 'pageLength', className: 'btn-primary' },
                        { extend: 'excel', className: 'btn-primary' },
                        {
                            text: 'Alta',
                            action: function (e, dt, node, config) {

                                //bootbox.alert("HOLA");
                                document.getElementById("txtCP").value = "";
                                var dynamicSelect = document.getElementById("CPLista");
                                for (var i = dynamicSelect.options.length - 1; i >= 0; i--)
                                    dynamicSelect.remove(i);
                                $("#modal-form").modal('show');

                            }
                            , className: 'btn-primary'
                        }
                    ]
                    //,"fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    //    if (aData[1] == "SETC") {
                    //        $('td', nRow).css('background-color', '#B6BF00');
                    //    } else if (aData[2] == "4") {
                    //        $('td', nRow).css('background-color', 'Orange');
                    //    }
                    //}
                }
            );

            //var varUnidadNegocio = $('#tbUnidadNegocio').DataTable();
            //varUnidadNegocio.draw();


            var bounds = new google.maps.LatLngBounds();
            var center = { lat: 19.181198, lng: -96.161272 };

            var options = {
                zoom: 18,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                center: center
            };

            var googleMap = new google.maps.Map($("#map")[0], options);
            console.log(googleMap);
            googleMap.setZoom(18);
            //var infoWindow = new google.maps.InfoWindow({ content: "Cargando..." });

            // Create the initial InfoWindow.
            let infoWindow = new google.maps.InfoWindow({
                content: "Da un click al mapa para leer Lat/Lng!",
                position: center,
            });
            infoWindow.open(googleMap);

            const marker = new google.maps.Marker({
                map: googleMap,
                draggable: true,
                position: center,
                title: 'Ubicación de Inicio'
            });

            const circle = new google.maps.Circle({
                map: googleMap,
                center: center,
                radius: 10000,
                fillColor: '#AA0000'
            });

            circle.bindTo('center', marker, 'position');
            marker.setVisible(false);
            circle.setVisible(false);



            // Configure the click listener.
            googleMap.addListener("click", (mapsMouseEvent) => {
                // Close the current InfoWindow.
                infoWindow.close();

                infoWindow.setPosition(mapsMouseEvent.latLng);
                infoWindow.setContent(`Latitud: ${mapsMouseEvent.latLng.lat().toFixed(6)} Longitud: ${mapsMouseEvent.latLng.lng().toFixed(6)}`);
                infoWindow.open(googleMap);

                //alert("aqui voy a buscar todo");

                /*circle.setMap(null);*/

                circle.setRadius(parseInt(document.getElementById("in_radio").value) * 1000);

                //remove_circle(circle);

                //const circle = new google.maps.Circle({
                //    map: googleMap,
                //    center: center,
                //    radius: parseInt(document.getElementById("in_radio").value) * 1000,
                //    fillColor: '#AA0000'
                //});

                //circle.bindTo('center', marker, 'position');

                marker.setVisible(false);
                marker.setPosition(mapsMouseEvent.latLng);
                marker.setVisible(true);
                circle.setVisible(true);


                //const parameters = '/Home/GetPostalCodeFromPosition' + `?latitude=${mapsMouseEvent.latLng.lat().toFixed(6)}&longitude=${mapsMouseEvent.latLng.lng().toFixed(6)}`;
                var _latitude = mapsMouseEvent.latLng.lat().toFixed(6);
                var _longitude = mapsMouseEvent.latLng.lng().toFixed(6);

                var e = document.getElementById("in_alcance");
                var value = e.options[e.selectedIndex].value;
                var text = e.options[e.selectedIndex].text;

                $("#CPLista").empty();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetPostalCodeFromPosition", "Catalogo")',
                    data: {
                        latitude: _latitude,
                        longitude: _longitude,
                        flagG:value
                    },
                    datatype: "html",
                    async: false,
                    beforeSend: function () {
                        //$(".modal").show();
                        //document.getElementById("postalcode").value = "";
                    },
                    success: function (data) {
                        if (data.Success) {
                            console.log(data);
                            var dynamicSelect = document.getElementById("CPLista");
                            console.log(dynamicSelect);
                            for (var i = 0; i < data.json.length; i++) {
                                var newOption = document.createElement("option");
                                newOption.value = data.json[i];
                                newOption.textContent = data.json[i];//item.whateverProperty

                                dynamicSelect.appendChild(newOption);
                            }
                            console.log(dynamicSelect);
                        }
                    }
                });
            });

            googleMap.fitBounds(bounds);
        });

        function remove_circle(circle) {
            // remove event listers
            google.maps.event.clearListeners(circle, 'click_handler_name');
            google.maps.event.clearListeners(circle, 'drag_handler_name');
            circle.setRadius(0);
            // if polygon:
            // polygon_shape.setPath([]);
            circle.setMap(null);
        }


        /* Bootbox Dialog box with custom Value */
        $('.alert-custom').click(function () {
            bootbox.dialog({
                title: "This is a form in a modal.",
                message: '<div class="row">  ' +
                    '<div class="col-md-12"> ' +
                    '<form class="form-horizontal"> ' +
                    '<div class="form-group"> ' +
                    '<label class="col-md-4 control-label" for="name">Name</label> ' +
                    '<div class="col-md-4"> ' +
                    '<input id="name" name="name" type="text" placeholder="Your name" class="form-control input-md"> ' +
                    '<span class="help-block">Here goes your name</span> </div> ' +
                    '</div> ' +
                    '<div class="form-group"> ' +
                    '<label class="col-md-4 control-label" for="awesomeness">How awesome is this?</label> ' +
                    '<div class="col-md-4"> <div class="radio"> <label for="awesomeness-0"> ' +
                    '<input type="radio" name="awesomeness" id="awesomeness-0" value="Really awesome" checked="checked"> ' +
                    'Really awesome </label> ' +
                    '</div><div class="radio"> <label for="awesomeness-1"> ' +
                    '<input type="radio" name="awesomeness" id="awesomeness-1" value="Super awesome"> Super awesome </label> ' +
                    '</div> ' +
                    '</div> </div>' +
                    '</form> </div>  </div>',
                buttons: {
                    success: {
                        label: "Save",
                        className: "btn-success",
                        callback: function () {
                            var name = $('#name').val();
                            var answer = $("input[name='awesomeness']:checked").val()
                            $('.Example').show().html("Hello " + name + ". You've chosen <b>" + answer + "</b").fadeOut(5000);
                        }
                    }
                }
            }
            );
        });

        function AgregaCP() {
            var dynamicSelect = document.getElementById("CPLista");
            var newOption = document.createElement("option");
            newOption.value = document.getElementById("txtCP").value;
            newOption.textContent = document.getElementById("txtCP").value;//item.whateverProperty
            dynamicSelect.appendChild(newOption);
        }

        function GetTmsUNs() {
            //var _Id_Num_UN = $("#hddTda").val();
            //debugger;
            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetUnidadesNegocios", "Catalogo")',
                data: {
                    //  Id_Num_UN: _Id_Num_UN
                },
                datatype: "html",
                success: function (json) {
                    console.log(json);
                    if (json.Success) {
                        $("#tbUnidadNegocio tbody tr").remove();
                        //var tr;
                        //debugger;
                        //Append each row to html table
                        for (var i = 0; i < json.json.length; i++) {
                            tr = $('<tr/>');
                            //tr.append("<td class='row1'>" + json.json[i].Id_Num_Orden + "</td>");
                            tr.append("<td>" + json.json[i].Id_Num_UN + "</td>");
                            tr.append("<td>" + json.json[i].Centros + "</td>");
                            tr.append("<td>" + json.json[i].Latitud + "</td>");
                            tr.append("<td>" + json.json[i].Longitud + "</td>");
                            tr.append("<td>" + json.json[i].CodigosPostales + "</td>");
                            //tr.append("<td><button type = 'button' class= 'btn btn-white btn-circle'> <i class='fa fa-edit'></i></button><button type='button' class='btn btn-warning btn-circle'> <i class='fa fa-minus'></i></button></td >")
                            tr.append("<td><button onclick='EditSurtidores(" + json.json[i].Id_Carrier + ")' type = 'button' class= 'btn btn-white btn-circle'> <i class='fa fa-edit'></i></button><button type='button'  onclick='DeleteSurtidores(" + json.json[i].Id_Carrier + ")'  class='btn btn-warning btn-circle'> <i class='fa fa-minus'></i></button></td >");
                            $('#tbUnidadNegocio').append(tr);
                            //console.log(json.json[i]);
                        }
                        //console.log('se redibujó');
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

        function GetAlmacen() {
            //var _Id_Num_UN = $("#hddTda").val();
            //debugger;
            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetCommonAlmacenes", "Catalogo")',
                data: {
                    //  Id_Num_UN: _Id_Num_UN
                },
                datatype: "html",
                success: function (json) {
                    if (json.Success)
                    {
                        console.log(json);
                        var dynamicSelect = document.getElementById("cmbAlmacen");
                        console.log(dynamicSelect);
                        for (var i = 0; i < json.json.length; i++) {
                            var newOption = document.createElement("option");
                            newOption.value = json.json[i].NumAlmacen;
                            newOption.textContent = json.json[i].NombreAlmacen;//item.whateverProperty

                            dynamicSelect.appendChild(newOption);
                        }
                        console.log(dynamicSelect);
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    bootbox.alert(errorThrown);
                }
            });
        }

    </script>

}